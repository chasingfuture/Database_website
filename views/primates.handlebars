    <div class="col-sm-6">
          <form id="main_create_form" action = "/create_primate" method="post">
            <div class="form-group">
              <label for="fileName">Name of File: </label>
              <input type="text" class="form-control" id="taskname" name="fileName" placeholder="Video name here">
            </div>

            <div class="form-group">
              <label for="date">Date Recorded: </label>
              <input type="text" class="form-control" id="calendar" name="date" placeholder="The date video was took here">
            </div>

            <div class="form-group">
              <label for="species">Species: </label>
              <input type="text" class="form-control" id="taskname" name="species" placeholder="gorilla or bonobo">
            </div>

            <div class="form-group">
              <label for="infantName">Infant Name: </label>
              <input type="text" class="form-control" id="taskname" name="infantName" placeholder="Yaro">
            </div>
            
            <div class="time_due_field form-group">
              <label for="timedue">Start Time: </label>
              <input type="datetime" class="form-control" id="timedue" name="startTime" placeholder="2016-01-01 01:01:01">
            </div>
              
            <div class="form-group">
              <label for="infantName">Activity: </label>
              <input type="text" class="form-control" id="taskname" name="activity" placeholder="Carry">
            </div>
              
            <div class="form-group">
              <label for="infantName">Variation: </label>
              <input type="text" class="form-control" id="taskname" name="variation" placeholder="Ventral">
            </div>
            
            <div class="time_due_field form-group">
              <label for="timedue">End Time: </label>
              <input type="datetime" class="form-control" id="timedue" name="endTime" placeholder="2016-01-01 01:01:01">
            </div>
              
            <div class="form-group">
              <label for="infantName">Partner: </label>
              <input type="text" class="form-control" id="taskname" name="partner" placeholder="Mother">
            </div>
              
            <div class="form-group">
              <label for="infantName">Comment: </label>
              <input type="text" class="form-control" id="taskname" name="comment" placeholder="Sexual Behavior">
            </div>

            <input type="submit" value="Submit" class="btn btn-secondary"/>
            <a href="home">    Cancel </a>
        </form>
